{
  "name": "chrome扩展测试demo",
  "version": "1.0",
  "manifest_version": 2,
  "description": "chrome扩展测试。",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "./background/background.js"
    ]
  },
  "content_scripts":[{
    "matches":["*://*/*"],
    "js":["./contentScript/main.js"],
    "css":[
      "./contentScript/main.css"
    ],
    "run_at":"document_start"
  }],
  "permissions": [
      "downloads",
      "tabs",
      "activeTab"
  ]
}